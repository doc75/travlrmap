<html>
  <head>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="/gmaps.js"></script>
    <%= erb :"_map_js", :layout => false %>

    <title>My Travels</title>
   </head>
  <body>

    <div>
      <p>
      <% @config[:views].sort_by{|k,v| v[:description] }.each do |view, settings| %>
        <a href="/<%= view == :default ? "" : view %>"><%= settings[:description] %></a><br />
      <% end %>
      </p>
    </div>

    <center><div id="main_map" style="width:<%= @map[:width] %>; height:<%= @map[:height] %>; display: block; align=center"></div></center>
  </body>
</html>
